<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<package name="user_Package" extends="default" namespace="/view/user">
		
 		<action name="user_login" class="loginAction" method="userLogin">
			<result name="success">/WEB-INF/jsp/login_test.jsp</result>
		</action>
		
		<action name="find_allActivity" class="loginAction" method="findAllActivity">
			<result name="success">/WEB-INF/jsp/list_test.jsp</result>
		</action>
		
		<action name="test_json1" class="loginAction" method="testJson1">
			<result name="success" type="json">
				<param name="noCache">true</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		
		<action name="test_json2" class="loginAction" method="testJson2">
			<result name="success" type="json">
				<param name="noCache">true</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		
		<action name="test_report1*" class="loginAction" method="testReport1">
			<result name="success" type="jasper">
				<param name="location">/WEB-INF/jasper/Activity.jasper</param>
				<param name="datasource">activityList</param>
				<param name="format">{1}</param>
				<param name="imageServletUrl">
			        <![CDATA[/servlet/image?image=]]>
				</param>
			</result>
		</action>
		
	</package>
	
</struts>
